<% if page.current? %>
  <span class="flex items-center justify-center h-10 w-10 rounded-full bg-amber-600 font-bold text-white shadow-md">
    <%= page %>
  </span>
<% else %>
  <%= link_to page, url, remote: remote, rel: page.rel, class: 'flex items-center justify-center h-10 w-10 rounded-full bg-white text-gray-700 hover:bg-amber-100 transition-colors duration-200' %>
<% end %>