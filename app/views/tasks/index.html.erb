<p style="color: green"><%= notice %></p>

<% content_for :title, "Tasks" %>

<h1 class="text-lg font-semibold text-gray-900">Tasks</h1>

<%= form_with(model: [@project, Task.new], data: { turbo_frame: "tasks" }) do |form| %>
  <div class="mb-2">
    <%= form.text_field :title, placeholder: "Task title", class: "border p-1" %>
  </div>
  <div>
    <%= form.submit "Add Task", class: "bg-blue-500 text-white px-3 py-1 rounded" %>
  </div>
<% end %>

<div id="tasks">
  <% @tasks.each do |task| %>
    <%= render task %>
    <p>
      <%= link_to "Show this task", task %>
    </p>
  <% end %>
</div>

<%= link_to "New task", new_task_path %>
